+	.page_size	= 64,
+	.flags		= AT24_FLAG_ADDR16,
+};
+
+static struct i2c_board_info __initdata ae300_i2c_devices[] = {
+	{
+		I2C_BOARD_INFO("24c128", 0x50),
+		.platform_data = &at24c128,
+	},
+};
