+static void spi_irq_handler(struct andes_spi *spi) {
+	uint32_t i, j, status, interen;
+        uint32_t data = 0;
+        uint32_t rx_num = 0;
+        uint32_t event = 0;
+        uint32_t have_clear_state = 0;
+
+	// read status register
+	status = andes_spi_read(spi,INTRST);
