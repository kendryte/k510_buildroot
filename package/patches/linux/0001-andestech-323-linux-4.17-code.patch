+	perf_irq_t err = NULL;
+	int code;
+
+	switch (event->attr.type) {
+	case PERF_TYPE_HARDWARE:
+		code = riscv_pmu->map_hw_event(attr->config);
+		break;
+	case PERF_TYPE_HW_CACHE:
+		code = riscv_pmu->map_cache_event(attr->config);
+		break;
+	case PERF_TYPE_RAW:
+		code = riscv_pmu->map_raw_event(attr->config);
+		break;
+	default:
+		return -ENOENT;
