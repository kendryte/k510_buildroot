+	set_wakeup_enable(id, *wake_mask);
+	// set SMU light sleep command
+	set_sleep(id, DeepSleep_CTL);
+	// backup, suspend and resume
+	sbi_suspend_mem();
+	// enable privilege
+	sbi_suspend_prepare(true, true);
